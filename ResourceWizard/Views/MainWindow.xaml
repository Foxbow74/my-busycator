<Window x:Class="ResourceWizard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:VMs="clr-namespace:ResourceWizard.VMs"
        xmlns:Views="clr-namespace:ResourceWizard.Views" xmlns:StoreableVMs="clr-namespace:ResourceWizard.StoreableVMs"
        xmlns:StoreableView="clr-namespace:ResourceWizard.StoreableView" Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
	<Window.Resources>
        <ResourceDictionary Source="/Dictionary.xaml"/>
    </Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TabControl ItemsSource="{Binding Tabs}" DisplayMemberPath="DisplayName" SelectedIndex="0" Background="Gray"/>
		<Button Padding="5" Grid.Row="1" HorizontalAlignment="Right" Margin="5"  Command="{Binding SaveCommand}">Сохранить</Button>
	</Grid>
</Window>
