<Window x:Class="ResourceWizard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:VMs="clr-namespace:ResourceWizard.VMs"
        xmlns:Views="clr-namespace:ResourceWizard.Views" Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
	<Window.Resources>
		<DataTemplate DataType="{x:Type VMs:TilesTabVM}">
			<Views:TilesTabView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type VMs:TextureVM}">
			<Views:TextureView/>
		</DataTemplate>
	</Window.Resources>
	<TabControl ItemsSource="{Binding Tabs}" DisplayMemberPath="DisplayName" SelectedIndex="0"/>
</Window>
